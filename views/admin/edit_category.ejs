<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>CHRONOCOVE_Admin</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet"> 
    
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/stylesheets/adminbootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/stylesheets/adminstyle.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        

        <%-include("../partials/adminHeader.ejs")%>

        <!-- Content Start -->
        <div class="content">
            <%-include("../partials/adminNavbar.ejs")%>


      <!-- Edit_Category Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Edit Category</h5>
                </div>
                <div class="card-body">
                    <% if (typeof error !== 'undefined' && error !== '') { %>
                        <div class="alert alert-danger" role="alert">
                            <%= locals.error %>
                        </div>
                    <% } %>
                    <form action="/admin/editCategoryPost/<%=data.id%>" method="POST" id="editCategoryForm">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Category Name</label>
                            <input type="text" class="form-control" id="categoryName" value="<%= data ? data.categoryName : '' %>" name="categoryName" required>
                        </div>
                        <div class="mb-3">
                            <label for="categoryDescription" class="form-label">Category Description</label>
                            <textarea class="form-control" id="categoryDescription" name="categoryDescription" rows="3"><%= data.categoryDescription %></textarea>
                        </div>
                        
                        <button type="submit" id="submitButton" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Edit_Category Form End -->


<%-include("../partials/adminFooter.ejs")%>

        </div>
        <!-- Content End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

 
    
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/javascripts/adminmain.js"></script>
    <script>
        document.getElementById('submitButton').addEventListener('click', function(event) {
            // Trim the values before submitting
            var categoryNameInput = document.getElementById('categoryName');
            var categoryDescriptionInput = document.getElementById('categoryDescription');
            
            categoryNameInput.value = categoryNameInput.value.trim();
            categoryDescriptionInput.value = categoryDescriptionInput.value.trim();
    
            // Trigger the form submission manually after trimming
            document.getElementById('editCategoryForm').submit();
        });
    </script>

</html>