<body>
    <div class="container-fluid position-relative d-flex p-0">
         

        <%-include("../partials/adminHeader.ejs")%>


        <!-- Content Start -->
        <div class="content">
            <%-include("../partials/adminNavbar.ejs")%>


            
    <!-- Action Button -->
    <div class="action-btn-container">
        <a href="/admin/addProducts" class="btn btn-primary">+ Add Product</a>
    </div>
 
 <!-- product card Start -->
 <div class="row mt-4">
    <% products.forEach(product => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow-2-strong" style="width: 100%;">

                <img src="/uploads/<%= product.mainProductImage %>" alt="<%= product.productName %>" class="card-img-top" style="max-height: 200px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <p class="card-text fw-bold">Product: <%= product.productName %></p>
                    <p class="card-text fw-bold">Price: <%= product.productPrice %> â‚¹</p>
                    <p class="card-text fw-bold">Quantity: <%= product.productQuantity %></p>
                    
                </div>

                <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
                    <form action="/admin/editProduct/<%= product._id %>" method="get">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="btn btn-primary shadow me-1">Edit</button>
                    </form>
                    <form action="/admin/deleteProduct/<%= product._id %>" method="get">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="btn btn-primary shadow-0 me-1">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<!-- Add these styles for Bootstrap-style pagination links -->
<style>
    .pagination {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }
  
    .pagination .page-item {
      margin: 0 2px;
    }
  
    .pagination .page-link {
      padding: 10px;
      text-decoration: none;
      border: 1px solid #dee2e6;
      color: #007bff;
      background-color: #fff;
    }
  
    .pagination .page-item.active .page-link {
      background-color: #007bff;
      color: #fff;
    }
  </style>
  
  <!-- Pagination Links -->
  <div class="row" data-aos="fade-up">
    <div class="col-md-12 text-center">
      <div class="site-block-27">
        <ul>
          <% if (currentPage > 1) { %>
            <li><a href="?page=<%= currentPage - 1 %>">&lt;</a></li>
          <% } %>
  
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="<%= i === currentPage ? 'active' : '' %>">
              <a href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
  
          <% if (currentPage < totalPages) { %>
            <li><a href="?page=<%= currentPage + 1 %>">&gt;</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
  <style>
    .site-block-27 ul {
      list-style: none;
      padding: 0;
      display: flex;
      justify-content: center;
    }
  
    .site-block-27 li {
      margin: 0 5px;
    }
  </style>
  
  

  
<!-- End Pagination Links -->



<%-include("../partials/adminFooter.ejs")%>

        </div>
        <!-- Content End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

