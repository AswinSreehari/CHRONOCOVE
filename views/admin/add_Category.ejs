    <!-- Add this script at the end of your HTML body -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Select the form element
        const categoryForm = document.querySelector('form');

        // Add a submit event listener to the form
        categoryForm.addEventListener('submit', function (event) {
            // Prevent the form from submitting by default
            event.preventDefault();

            // Get form elements
            const categoryNameInput = document.getElementById('categoryName');
            const categoryDescriptionInput = document.getElementById('categoryDescription');

            // Get values from form inputs
            const categoryName = categoryNameInput.value.trim();
            const categoryDescription = categoryDescriptionInput.value.trim();

            // Validate Category Name
            if (categoryName === '') {
                alert('Please enter a Category Name');
                categoryNameInput.focus();
                return;
            }

            // Validate Category Description (Optional)
            // You can add more specific validations here based on your requirements

            // If all validations pass, you can submit the form
            categoryForm.submit();
        });
    });
</script>



