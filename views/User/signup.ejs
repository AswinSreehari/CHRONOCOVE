<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up </title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/stylesheets/signup.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


    <!-- JS -->
    <script src="/javascripts/signup_jquery.min.js"></script>
    <script src="/javascripts/signup_jquery-ui.min.js"></script>
    <script src="/javascripts/signup.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var registerForm = document.getElementById('register-form');

            registerForm.addEventListener('submit', function(event) {
                // Prevent the form from submitting
                event.preventDefault();

                // Reset previous error messages
                resetErrorMessages();

                // Validate form fields
                var name = document.getElementById('name').value;
                var email = document.getElementById('email').value;
                var password = document.getElementById('password').value;

                if (name.trim() === '') {
                    displayErrorMessage('name', 'Please enter your name.');
                }

                if (email.trim() === '') {
                    displayErrorMessage('email', 'Please enter your email.');
                }

                if (password.trim() === '') {
                    displayErrorMessage('password', 'Please enter your password.');
                }

                // If there are errors, prevent form submission
                if (document.querySelectorAll('.error-message').length > 0) {
                    return;
                }

                // If validation passes, you can submit the form
                registerForm.submit();
            });

            function displayErrorMessage(fieldId, message) {
                var errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.innerHTML = message;

                var formGroup = document.querySelector('#' + fieldId).closest('.form-group');
                formGroup.appendChild(errorDiv);
            }

            function resetErrorMessages() {
                var errorMessages = document.querySelectorAll('.error-message');
                errorMessages.forEach(function(errorMessage) {
                    errorMessage.remove();
                });
            }
        });
    </script>
     
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        
                        <% if (typeof msg !== 'undefined' && msg !== '') { %>
                            <div class="alert alert-danger " role="alert " >
                                <%= locals.msg %>
                            </div>
                        <% } %>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="name" placeholder="Your Name"/>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email"/>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="password" placeholder="Password"/>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/images/Logo.png" alt="sing up image" style="border-radius: 10px;"></figure>
                        <a href="/signin" class="signup-image-link">I am already a member</a>

                    </div>
                </div>
            </div>
        </section>

    <!-- JS -->
    <script src="/javascripts/signup_jquery.min.js"></script>
    <script src="/javascripts/signup.js"></script>
    <script src="/javascripts/signup_jquery-ui.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var registerForm = document.getElementById('register-form');
    
            registerForm.addEventListener('submit', function(event) {
                event.preventDefault();
    
                resetErrorMessages();
    
                var name = document.getElementById('name').value;
                var email = document.getElementById('email').value;
                var password = document.getElementById('password').value;
    
                if (name.trim() === '') {
                    displayErrorMessage('name', 'Please enter your name.');
                } else if (!/^[a-zA-Z]+$/.test(name.trim())) {
                    displayErrorMessage('name', 'Name should only contain alphabets.');
                }
    
                if (email.trim() === '') {
                    displayErrorMessage('email', 'Please enter your email.');
                } else if (!isValidEmail(email.trim())) {
                    displayErrorMessage('email', 'Please enter a valid email address.');
                }
    
                if (password.trim() === '') {
                    displayErrorMessage('password', 'Please enter your password.');
                } else if (containsSpecialCharacters(password)) {
                    displayErrorMessage('password', 'Password cannot contain special characters.');
                }
    
                if (document.querySelectorAll('.error-message').length === 0) {
                    // If there are no errors, you can submit the form
                    registerForm.submit();
                }
            });
    
            function displayErrorMessage(fieldId, message) {
                var errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.innerHTML = message;
    
                var formGroup = document.querySelector('#' + fieldId).closest('.form-group');
                formGroup.appendChild(errorDiv);
            }
    
            function resetErrorMessages() {
                var errorMessages = document.querySelectorAll('.error-message');
                errorMessages.forEach(function(errorMessage) {
                    errorMessage.remove();
                });
            }
    
            function isValidEmail(email) {
                // Add your email validation logic here
                // For a basic example, you can use a regular expression
                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            }
    
            function containsSpecialCharacters(text) {
                // Add your password validation logic here
                // For a basic example, you can use a regular expression
                return /[!@#$%^&*(),.?":{}|<>]/.test(text);
            }
        });
    </script>
    
    

</body> 
</html>