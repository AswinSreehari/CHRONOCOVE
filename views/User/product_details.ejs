<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div>
          <img id="main"  style="max-width: 50%; max-height: 50vh; margin: auto; display: flex;justify-content:center;" src="/uploads/<%=products.mainProductImage %>" alt="<%= products.productName %>"   class="img-fluid">
        </div>
     
       <!-- Additional Product Images -->
       <div class="additional-images">
          
        <% for (let i = 0; i < products.additionalProductImage.length; i++) { %>
                  
          <img width="70" height="70" class="rounded-2" src="/uploads/<%= products.additionalProductImage[i] %>" alt="<%= products.productName %>">
        
          <%}%>
      </div>
    </div>
      <div class="col-md-6">
        <h2 class="text-black"><%= products.productName %></h2>
        <p><%= products.productDescription %></p>
        <p class="mb-4"><strong class="text-primary h4">$<%=products.productPrice %></strong></p>

       
       

        <!------------------- Wishlist Icon---------------------------->
         
          <div class="mb-1 d-flex" id="wishlist-container">
            <a href="#" id="wishlist-icon" onclick="toggleWishlist('<%= products._id %>')">
              <svg id="heart-icon" class="icon icon-heart-o" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" width="30" height="30">
                <path id="heart-path" fill="white" stroke="black" stroke-width="2" d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C15.09 3.81 16.76 3 18.5 3 21.58 3 24 5.42 24 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
              </svg>
            </a>
          </div>
        
        
          

        
        

        <!-- Quantity Input -->
        <div class="mb-5">
          <div class="input-group mb-3 " style="max-width: 120px;">
            <p>
              <% if (products.productQuantity <= 0) { %>
                <span style="color: red;">Product Out of Stock</span>
              <% } else if (products.productQuantity <= 5) { %>
                <% if (products.productQuantity === 1) { %>
                  <span style="color: red;">Only one more left</span>
                <% } else { %>
                  <span style="color: red;">Only <%= products.productQuantity %> more left</span>
                <% } %>
              <% } else { %>
                Item left: <%= products.productQuantity %>
              <% } %>
            </p>

            <!-- Quantity input code here -->
          </div>
        </div>

        <!-- Add to Cart Button -->
        <!-- <p><a href="cart.ejs" class="buy-now btn btn-sm btn-primary">Add To Cart</a></p> -->
        <form action="/cart/<%=products._id%>" method="post">
          <input type="hidden" name="productId" value="<%= products._id %>">
          <button type="submit" class="buy-now btn btn-sm btn-primary" <% if (products.productQuantity <= 0) { %>disabled<% } %>>
              Add to Cart <i class="fa-solid fa-cart-shopping"></i>
          </button>
      </form>
      
