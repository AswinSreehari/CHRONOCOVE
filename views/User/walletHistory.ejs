<!DOCTYPE html>
<html lang="en">

<%-include("../partials/head.ejs")%>

<body>

  <%-include("../partials/headers.ejs")%>

 <div class="container-fluid p-0 justify-content-center align-items-center signUp min-vh-100">
    <div class="container mt-1">
        <h1 style="text-align: center;" class="mt-4">Wallet History</h1>
        <div class="table-responsive" style="height: 70vh; overflow-y: auto;  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
            <table class="table table-bordered mt-4">
                <thead class="thead-light">
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(transaction => { %>
                        <tr>
                            <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                            <td><%= transaction.type %></td>
                            <td>
                                <% if (transaction.type === 'Credit') { %>
                                    <span style="color: green;">+<%= transaction.amount %></span>
                                <% } else { %>
                                    <span style="color: red;"><%= transaction.amount %></span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%-include("../partials/footer.ejs")%>

  </div>

  <script src="/javascripts/jquery-3.3.1.min.js"></script>
  <script src="/javascripts/jquery-ui.js"></script>
  <script src="/javascripts/popper.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/owl.carousel.min.js"></script>
  <script src="/javascripts/jquery.magnific-popup.min.js"></script>
  <script src="/javascripts/aos.js"></script>
  <script src="/javascripts/main.js"></script>

</body>

</html>


 
 
